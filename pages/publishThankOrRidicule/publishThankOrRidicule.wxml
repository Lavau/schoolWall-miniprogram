<!--pages/publishSeekHelp/publishSeekHelp.wxml-->
<view>
  <!-- 输入标题 -->
  <view class="title">
    <view><input type="text" placeholder="请输入主题（最多10个字）" maxlength="10" bindinput="inputTitle"/></view>
  </view>

  <!-- 输入具体内容 -->
  <view class="description">
    <view>
      <textarea placeholder="请输入具体内容" maxlength="150" bindinput="inputDescription">
        <view class="word-num-sign">{{wordNum}}/150</view>
      </textarea>
    </view>
  </view>

  <!-- 选择图片并预览 -->
  <view class="picture">
    <button bindtap="choosepicture">选择图片</button>
  </view>
  <view>
    <image wx:for="{{pictures}}" wx:key="unique" src="{{item}}" data-index="{{index}}" bindtap="previewpicture"></image>
  </view>

  <!-- 匿名按钮 -->
  <view class="switch-anonymous">
    <switch bindchange="inputAnonymous">是否匿名，默认为不匿名</switch>
  </view>

  <!-- 取消按钮与提交按钮 -->
  <view class="btn">
    <button type="default">取消</button>
    <button type="primary" bindtap="submit">确定</button>
  </view>
</view>

