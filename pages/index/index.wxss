/* pages/index/index.wxss */
.nav {
  height: 85rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.nav-item {
  margin: 0 15rpx;
  width: 20%;
  display: inline-block;
  text-align: center;
}
.nav-item.active{
  font-weight: 800;
  font-size: large;
  border-bottom: #1E90FF 10rpx solid;
}
