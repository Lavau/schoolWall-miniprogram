/* pages/listOthers/listOthers.wxss */
.body-item{
  width: 100%;
  margin-bottom: 40rpx;
  background-color: #fff;
  padding: 15rpx;

  display: flex;
  flex-direction: column;
}

/* 图片部分 */
.body-item-img{
  width: 720rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
}

.body-item-img image{
  width: 235rpx;
  height: 235rpx;
  margin-right: 5rpx;
  border-radius: 25rpx;
}

/* 文字内容 */
.body-item-content{
  width: 720rpx;
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 2;  /*最多显示2行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/

  margin-bottom: 15rpx;
  padding-bottom: 5rpx;
  /* border-bottom: #93d1f5 5rpx dotted; */
}

/* 底部其他内容 */
.body-item-bottom{
  display: flex;
  flex-direction: row;
}

.body-item-bottom-avator{
  margin-top: 10rpx;
  height: 55rpx;
  width: 55rpx;
  border-radius: 35rpx;
}

.body-item-bottom-nickname{
  margin-left: 12rpx;
  /* margin-top: 4rpx; */
  padding-top: 16rpx;
  font-size: 28rpx;

  width: 400rpx;

  /* border: 1rpx red solid; */

  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 1;  /*最多显示1行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
}

/* 右边内容 */
.body-item-bottom-right{
  width: 235rpx;
  /* border: 1rpx blue solid; */
  display: flex;
  flex-direction: column;
  font-size: x-small;
}

.body-item-bottom-view {
  text-align: right;
}

.body-item-bottom-time{
  text-align: right;
}