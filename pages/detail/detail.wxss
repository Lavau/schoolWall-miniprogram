/* 展示发布的信息 */
/* .detail-info { */
  /* border: red 2rpx solid; */
/* } */

.tip {
  font-weight: bold;
  color: #D3D3D3;
}

.nickname {
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  padding-top: 10rpx;
  font-size: 26rpx;

  width: 400rpx;

  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 1;  /*最多显示2行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
}

/* 发布人信息 */
.promulgator-info {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}

.promulgator-info-avator {
  height: 58rpx;
  width: 58rpx;
  border-radius: 35rpx;
}

.promulgator-info-time {
  /* border: 1rpx blue solid; */
  width: 300rpx;
  text-align: right;
  margin-top: 16rpx;
  font-size: x-small;
  color: black;
}

/* 标题 */
.title {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  padding-bottom: 20rpx;
  /* border-bottom: #eeebeb 1rpx solid; */
}

/* 脱单 */
.single-feature {
  margin: 20rpx;
  padding-bottom: 20rpx;
  /* border-bottom: #eeebeb 1rpx solid; */
}

.single-feature-item {
  display: flex;
  flex-direction: row;
}

/* 具体内容 */
.description {
  margin: 20rpx;
}

.description-content {
  padding: 10rpx 10rpx 20rpx 10rpx;
  margin-top: 5rpx;
}

/* 图片 */
.picture {
  margin: 20rpx;
  width: 720rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
  padding-bottom: 20rpx;
  /* border-bottom: #eeebeb 1rpx solid; */
}

.picture image {
  width: 235rpx;
  height: 235rpx;
  margin-right: 5rpx;
  border-radius: 20rpx;
}

/* 杂项 */
.others {
  display: flex;
  flex-direction: row;
  margin: 20rpx 30rpx;
  font-size: smaller;
}

.others image { 
  height: 45rpx;
  width: 45rpx;
}

.others-right {
  display: flex;
  flex-direction: row;
  margin-left: 330rpx;
}

.others-liner {
  margin: 0 10rpx;
  border-right: #D3D3D3 2rpx solid;
}

/* 展示评论 */
.comment {
  margin: 0rpx 20rpx 20rpx 20rpx;
  /* border: green 2rpx solid; */
}

.comment-none {
  margin: 100rpx 0;
  text-align: center;
}

/* 左部 */
.comment-item {
  padding-top: 30rpx;
  display: flex;
  flex-direction: row;
}

.comment-item-left image{
  margin-top: 10rpx;
  height: 55rpx;
  width: 55rpx;
  border-radius: 35rpx;
}

/* 右部 */
.comment-item-right {
  margin: 0 10rpx 20rpx 10rpx;
  padding-bottom: 50rpx;
  border-bottom: #d4d4d4 1rpx solid;
}

/* header */
.comment-item-right-header {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  font-size: smaller;
}

.comment-item-right-header image { 
  margin-top: 5rpx;
  margin-left: 185rpx;
  height: 45rpx;
  width: 45rpx;
}

/* body */
.comment-item-right-body {
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;

  width: 635rpx;

  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 5;  /*最多显示2行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
}

/* foter */
.comment-item-right-foter {
  display: flex;
  flex-direction: row;
  margin-left: 10rpx;
}

.comment-item-right-bottom {
  text-align: center;
  margin: 15rpx 0 0 10rpx;
  padding: 8rpx;
  font-size: 22rpx;
  border-radius: 20rpx;
  background-color: rgb(214, 234, 245);
}