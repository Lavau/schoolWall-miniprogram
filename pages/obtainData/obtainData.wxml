<!--pages/obtainData/obtainData.wxml-->
<view class="container">
  <view class="body">
    <block wx:for="{{list}}" wx:key="i">
      <!-- 一卡通 -->
      <view wx:if="{{item['typeId'] == 7}}" class="body-item-ecard">
        <view>
          <span class="body-item-ecard-title">学院: </span>
          {{item['title']}}
        </view>
        <view>
          <span class="body-item-ecard-title">姓名: </span>
          {{item['description']}}
        </view>
      </view>

      <!-- 非一卡通部分（其他） -->
      <view wx:else class="body-item" bindtap="goToDetailOthersPage" 
          data-typeId="{{item['typeId']}}" data-id="{{item['id']}}">
        <!-- 上部 -->
        <view class="body-item-above">
          <text wx:if="{{item['description'].length != 0}}">{{item['description']}}</text>
          <text wx:else>{{item['title']}}</text>
          <image src="/assets/img/icon/my/delete.png" bindtap="delete" 
                  data-id="{{item['id']}}" data-typeId="{{item['typeId']}}">
          </image>
        </view>

        <!-- 下部 -->
        <view class="body-item-bottom">
          <image wx:if="{{item['pictureNum'] > 0}}" src="/assets/img/icon/my/picture.png"></image>
          <view class="body-item-bottom-type">{{item['typeName']}}</view>
          <view class="body-item-bottom-time">{{item['createTime']}}</view>
        </view>
      </view>
    </block> 
  </view>
</view>
