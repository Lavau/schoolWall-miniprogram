<!--pages/my/my.wxml-->
<view class="header">

  <view wx:if="{{!hasUserInfo && canIUse}}" class="noLogin" bindtap="goToLogin">
    <image class="noLogin-img" src="../../img/user-unlogin.png"></image>
    <view class="noLogin-btn">
      <button bindtap="goToLogin">您未登录</button>
    </view>
  </view>
  <view wx:else class="login">
    <image class="login-userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
    <view class="login-userinfo-nickname">{{userInfo.nickName}}</view>
  </view>

  <button bindtap="goToRegisterPage">注册</button>
</view>

