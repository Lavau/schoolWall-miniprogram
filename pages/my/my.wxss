/* pages/my/my.wxss */
/* 用户信息 */
.header-user-info {
  position: fixed;
  top: -170rpx;
  z-index: -10;
  width: 100%;
  height: 300rpx;
  border-radius: 10% 10%;
  background-color: #11417E;  

  display: flex;
  flex-direction: row;
}

.header-user-info-avatar {
  position: fixed;
  left: 70rpx;
  top: 8rpx;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50rpx;
  border: 5rpx #fff solid;
}

.header-user-info-nickname {
  position: fixed;
  left: 180rpx;
  top: 30rpx;
  color: #fff;

  width: 380rpx;
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 1;  /*最多显示1行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
}

.header-user-info-msg {
  position: fixed;
  top: 0rpx;
  left: 630rpx;
  top: 20rpx;
  height: 60rpx;
  width: 60rpx
}

/* 身体部分 */
.body {
  position: fixed;
  top: 155rpx;
}
   
.body-item {
  display: flex;
  flex-direction: row;

  justify-content: space-between;

  margin-left: 40rpx;
  padding: 30rpx 0;
  border-bottom: #F0EFF5 2rpx solid;
}

.body-item-left {
  display: flex; 
  flex-direction: row;
}

.body-item image{
  height: 45rpx;
  width: 45rpx
}

.body-item-middle {
  margin: 0 450rpx 0 15rpx;
}

/* 未登录样式 */
.no-login-body {
  margin-top: 50%;
}