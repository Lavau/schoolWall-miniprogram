/* pages/my/my.wxss */
.container {
  background-color: #F0EFF5;
} 

/* 用户信息 */
.header-user-info {
  position: fixed;
  top: -150rpx;
  z-index: -10;
  width: 100%;
  height: 30%;
  border-radius: 20% 20%;
  background-color: #0081CC;  

  display: flex;
  flex-direction: row;
}

.header-user-info-avatar {
  position: fixed;
  left: 100rpx;
  top: 0rpx;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
}

.header-user-info-nickname {
  position: fixed;
  left: 220rpx;
  top: 30rpx;
}

/* 头部的盒子 */
.header-bottom-box{
  position: fixed;
  top: 120rpx;
  z-index: 10;
  width: 652rpx;
  height: 100rpx;
  margin: 0 45rpx;
  background-color: #FFFFFF;   /*white*/
  border-radius: 100rpx;
  display: flex;
  flex-direction: row;
  font-weight: bold;
  font-size: small;
  box-shadow: 5rpx 5rpx 5rpx 5rpx  #F0F0F0;  /*HoneyDew*/
}

.header-bottom-box-item{
  margin-left: 25rpx;
  margin-top: 30rpx;
  text-align: center;
  width: 50%;
}

.header-bottom-box-item-middle {
  border-left: #0081CC 2rpx solid;
  border-right: #0081CC 2rpx solid;
  margin-bottom: 30rpx;
}

/* 身体部分 */
.body {
  position: fixed;
  top: 280rpx;
}
   
.body-item {
  display: flex;
  flex-direction: row;

  margin: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: #F0EFF5 2rpx solid;
}

.body-item image{
  height: 40rpx;
  width: 40rpx
}

.body-item-middle {
  margin: 0 480rpx 0 15rpx;
}

/* 未登录样式 */
.no-login-body {
  margin-top: 50%;
}

.no-login-box {
  animation: animated-border 1.5s infinite;
  height: 100rpx;
  font-family: Arial;
  font-size: 18px;
  font-weight: bold;
  color: #f80a16;
  border: 2px solid;
  border-radius: 10px;
  margin: 300rpx 15px;
  line-height: 100rpx;
  text-align: center;  
}

@keyframes animated-border {
  0% {box-shadow: 0 0 0 0 rgba(248, 10, 22, 0.8);}
  100% {box-shadow: 0 0 0 20px rgba(248, 10, 22, 0);}
}