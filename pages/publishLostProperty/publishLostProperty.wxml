<!--pages/postLostProperty/postLostProperty.wxml-->
<view>
  <!-- 输入标题 -->
  <view class="title">
    <view><input type="text" placeholder="请输入物品名（最多10个字）" maxlength="10" bindinput="inputTitle"/></view>
  </view>

  <!-- 输入标题 -->
  <view class="description">
    <view>
      <textarea placeholder="请输入物品的特征描述" maxlength="150" bindinput="inputDescription">
        <view class="word-num-sign">{{wordNum}}/150</view>
      </textarea>
    </view>
  </view>

   <!-- 选择图片并预览 -->
  <view class="photo">
    <button bindtap="choosePhoto">选择图片</button>
  </view>
  <view>
    <image wx:for="{{photos}}" wx:key="unique" src="{{item}}" data-index="{{index}}" bindtap="previewPhoto"></image>
  </view>

  <!-- 输入认领信息 -->
  <view class="msg">
    <view>认领信息：</view>
    <view><input type="text" placeholder="认领方式（最多20个字）" maxlength="20" bindinput="inputMsg"/></view>
  </view>

  <!-- 取消按钮与提交按钮 -->
  <view class="btn">
    <button type="default" bindtap="cancel">取消</button>
    <button type="primary" bindtap="submit">确定</button>
  </view>
</view>
