/* pages/publishOthers/publishOthers.wxss */
.title, .msg, .description {
  border: #D3D3D3 3rpx solid;
  border-radius: 10rpx;
  margin: 30rpx 20rpx;
  padding: 10rpx;
}

.description-word-num-sign {
  margin: 10rpx 0 0 2rpx;
  font-size: small;
  bottom: 0rpx;
  color: lightblue;
}

/* 脱单项 */
.height, .weight{
  display: inline-table;
  border: #D3D3D3 3rpx solid;
  border-radius: 10rpx;
  margin: 20rpx 20rpx 10rpx 20rpx;
  padding: 10rpx;
  width: 500rpx;
}

/* 图片部分 */
.picture {
  margin: 10rpx;
  width: 720rpx;
  box-sizing: border-box;
  margin: 30rpx 20rpx;
}

.picture image {
  width: 235rpx;
  height: 235rpx;
  margin-right: 5rpx;
  border-radius: 15rpx;
}

/* 匿名按钮 */
.switch-anonymous {
  display: flex;
  flex-direction: row;
  margin: 30rpx 20rpx;
}

.switch-anonymous-word {
  margin: 0 0 1px 10rpx;
  font-size: small;
  color: #D3D3D3;
}

.no-login-body {
  margin-top: 50%;
}

.submit-button button {
  margin-bottom: 20rpx; 
  background-color: #11417E;
  color: #fff;

  
}